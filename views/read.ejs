<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Users</title>
  <link rel="stylesheet" href="/stylesheet/style.css" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white p-6">
    <a class="text-blue-500 underline" href="/">‚Üê Back to Home</a>
    <h1 class="text-3xl mt-10 tracking-tighter mb-5">All Users</h1>
    
    <div class="users flex gap-5 flex-wrap">
      <% users.forEach(function(user) { %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-2xl shadow-lg">
          <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
            <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="<%= user.name %>'s photo" />
          </div>
          <h3 class="text-xl mt-3 tracking-tight font-semibold"><%= user.name %></h3>
          <h5 class="text-zinc-400 text-sm"><%= user.email %></h5>
          <div class="flex gap-4 mt-6">
            <a class="text-green-400 hover:underline" href="/edit/<%= user._id %>">Edit User</a>
            <a class="text-red-500 hover:underline" href="/delete/<%= user._id %>">Delete User</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
